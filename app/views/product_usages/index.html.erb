<p id="notice"><%= notice %></p>

<h1>Product Usages</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product name</th>
      <th>Usage status</th>
      <th>Images</th>
      <th>Comment body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_usages.each do |product_usage| %>
      <tr>
        <td><%= product_usage.user.email %></td>
        <td><%= product_usage.product_name %></td>
        <td><%= humanize_status_for product_usage.usage_status %></td>
        <td><%= image_tag product_usage.images.first, width: 100 %></td>
        <td><%= product_usage.comment_body %></td>
        <td><%= link_to 'Show', product_usage %></td>
        <td><%= link_to 'Edit', edit_product_usage_path(product_usage) %></td>
        <td><%= link_to 'Destroy', product_usage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


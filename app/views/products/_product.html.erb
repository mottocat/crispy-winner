<div class="pv3 bb b--black-05">

  <%= link_to product.brand + ' ' + product.name,
              product_comments_path(product),
              class: 'link black b'  %>

  <div class="fr">
    <%= link_to '#',
                product_comments_path(product),
                class: 'link silver f7 dib ml2'   %>

    <% if policy(product).edit? %>
      <%= link_to 'Edit',
                  edit_product_path(product),
                  class: 'link silver f7 dib ml2' %>
    <% end %>

    
    <% if policy(product).destroy? %>
      <%= link_to 'x',
                product, 
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: 'link silver f7 dib ml2' %>
    <% end %>
  </div>
</div>
